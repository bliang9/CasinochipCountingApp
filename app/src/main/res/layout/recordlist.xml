<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="84dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/back"
            android:layout_width="91dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/backbutton" />

        <TextView
            android:id="@+id/recordTextView"
            android:layout_width="318dp"
            android:layout_height="84dp"
            android:layout_gravity="center"
            android:background="@drawable/textview_texture2"
            android:text="Record"
            android:textAlignment="center"
            android:textColor="@color/common_google_signin_btn_text_dark_default"
            android:textSize="60dp"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="61dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/allPlayerRecord"
            android:layout_width="208dp"
            android:layout_height="61dp"
            android:layout_gravity="center"
            android:background="@drawable/textview_texture3"
            android:text="Players"
            android:textAlignment="center"
            android:textColor="@color/common_google_signin_btn_text_dark_default"
            android:textSize="38dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/myPastRecord"
            android:layout_width="match_parent"
            android:layout_height="61dp"
            android:layout_gravity="center"
            android:background="@drawable/textview_texture4"
            android:text="My Record"
            android:textAlignment="center"
            android:textColor="@color/common_google_signin_btn_text_dark_default"
            android:textSize="38dp"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <ScrollView
            android:id="@+id/playersScroll"
            android:layout_width="207dp"
            android:layout_height="match_parent"
            android:background="@drawable/scrollview_texture5">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

            </LinearLayout>
        </ScrollView>

        <ScrollView
            android:id="@+id/myRecordScroll"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/scrollview_texture4">

            <LinearLayout
                android:id="@+id/myGameHistory"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" />
        </ScrollView>
    </LinearLayout>
</LinearLayout>